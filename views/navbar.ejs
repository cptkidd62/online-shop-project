<header class="navbar">
    <a class="header-link to-left" href="http://localhost:3000/">Strona główna</a>
    <a class="header-link to-left" href="http://localhost:3000/games/">Produkty</a>
    <div>
        <form action="/games" method="get">
            <input type="text" name="search" id="search">
            <input type="submit" value="Szukaj">
        </form>
    </div>
    <% if (locals.user) { %>
        <% if (locals.user.isadmin) { %>
            <a class="header-link to-right" href="http://localhost:3000/admin/">Panel administratora</a>
        <% } %>
        <a class="header-link to-right" href="http://localhost:3000/my-account/">
            <%= locals.user.login %><br />Moje konto
        </a>
        <a class="header-link to-right" href="http://localhost:3000/logout/">Wyloguj się</a>
        <a class="header-link to-right" href="http://localhost:3000/cart/">Koszyk</a>
        <% } else { %>
            <a class="header-link to-right" href="http://localhost:3000/login/">Zaloguj się</a>
            <% } %>
</header>